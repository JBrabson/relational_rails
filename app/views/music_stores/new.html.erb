<style>
body {
  background-image: url(https://image.shutterstock.com/image-photo/contrabass-placed-oblique-position-waiting-260nw-1021703653.jpg);
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
  text-align: left;
  color: white;
}
a:link, a:visited {
  background: transparent;
  color: white;
  text-decoration: none;
}
a:hover {
  font-weight: 700;
  color: white;
}
</style>

<%= link_to "All Music Stores |", "/music_stores" %>
<%= link_to "All Instruments", "/instruments" %>
<br>
<br>
<%= form_with url: '/music_stores', method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <br>
  <p>True <%= form.radio_button :rents, value="true" %>
  False <%= form.radio_button :rents, value="false" %></p>
  <%= form.label :lesson_cost %>
  <%= form.text_field :lesson_cost %><br>
  <br>
  <%= form.submit "Create Music Store" %>
<% end %>