<%= link_to "All Instruments", "/instruments" %>

<h1>Music Stores</h1>
<br>
<%= button_to "New Music Store", "/music_stores/new", method: :get %>
<h4><%= link_to "Sort By Instrument Count", '/music_stores/sort' %></h4>
<%= form_with url: "/music_stores/find_exact", method: :get, local: true do |form| %>
  <%= form.text_field :search %>
  <br>
  <%= form.submit "Search exact match" %>
<% end %>
<br>
<%= form_with url: "/music_stores/find_partial", method: :get, local: true do |form| %>
  <%= form.text_field :search %>
  <br>
  <%= form.submit "Search partial match" %>
<% end %>
<br>
<br>
<% @music_stores.each do |music_store| %>
  <h2><%= music_store.name %></h2>
  <h3><%= link_to "Check us out here!!", "/music_stores/#{music_store.id}" %></h3>
  <h3>In business since: <%= music_store.created_at %></h3>
  <%= button_to "Edit", "/music_stores/#{music_store.id}/edit", method: :get %>
  <%= button_to "Delete", "/music_stores/#{music_store.id}", method: :delete %>
<% end %>

