<%= link_to "All Music Stores |", "/music_stores" %>
<%= link_to "All Instruments", "/instruments" %>
<%= form_with url: "/instruments/#{@instrument.id}", method: :patch, local: true do |form| %>
  <%= form.label :type %>
  <%= form.text_field :type %>
  <%= form.label :rent_to_own %>
  <%= form.text_field :rent_to_own %>
  <%= form.label :cost %>
  <%= form.text_field :cost %><br>
  <br>
  <%= form.submit 'Update Instrument' %>
<% end %>